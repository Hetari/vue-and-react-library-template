{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@vue/*": ["src/vue/*"],
      "@react/*": ["src/react/*"]
    },
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "types/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}

