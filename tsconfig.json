{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "baseUrl": "./",
    "paths": {
      "vue/*": ["src/vue/*"],
      "react/*": ["src/react/*"]
    },
    "strict": true,
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "types/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}